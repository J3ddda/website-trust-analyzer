{
    "manifest_version": 3,
    "name": "Simple Website Trust Analyzer",
    "version": "1.0",
    "description": "Analyze the trustworthiness of websites when triggered by the user.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  